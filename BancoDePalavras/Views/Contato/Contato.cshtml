@{
}

<div class="container-fluid">
    <h2>Contato</h2>
    <form method="post" action="/contato/recebercontato">
        <div class="form-group">
            <label for="nome">Nome:</label>
            <input type="text" class="form-control" id="nome" placeholder="Nome" name="nome">
            @Html.ValidationMessage("nome")
        </div>
        <div class="form-group">
            <label for="email">Email:</label>
            <input type="email" class="form-control" id="email" placeholder="E-mail." name="email">
            @Html.ValidationMessage("email")
        </div>
        <div class="form-group">
            <label for="assunto">Assunto:</label>
            <input type="text" class="form-control" id="assunto" placeholder="Assunto." name="assunto">
            @Html.ValidationMessage("assunto")
        </div>
        <div class="form-group">
            <label for="mensagem">Mensagem:</label>
            <textarea name="mensagem" class="form-control" id="mensagem"></textarea>
            @Html.ValidationMessage("mensagem")
        </div>
        <button type="submit" class="btn btn-primary">Enviar</button>
        @ViewBag.Mensagem;
    </form>
</div>