@{
}

<div class="container-fluid">
    <h2>Contato</h2>
    <form method="post" action="/contato/recebercontato">

        @if (@ViewBag.Contato is null)
        {
            <div class="form-group">
                <label for="nome">Nome:</label>
                <input type="text" class="form-control" id="nome" placeholder="Nome" name="nome">
                @Html.ValidationMessage("nome")
            </div>
            <div class="form-group">
                <label for="email">Email:</label>
                <input type="email" class="form-control" id="email" placeholder="E-mail" name="email">
                @Html.ValidationMessage("email")
            </div>
            <div class="form-group">
                <label for="assunto">Assunto:</label>
                <input type="text" class="form-control" id="assunto" placeholder="Informe o assunto" name="assunto">
                @Html.ValidationMessage("assunto")
            </div>

            <div class="form-group">
                <label for="mensagem">Mensagem:</label>
                <textarea class="form-control" name="mensagem" id="mensagem" placeholder="Descreva sua mensagem"></textarea>
                @Html.ValidationMessage("mensagem")
            </div>
        }
        else
        {
            <div class="form-group">
                <label for="nome">Nome:</label>
                <input type="text" value="@ViewBag.Contato.Nome" class="form-control" id="nome" placeholder="Nome" name="nome">
                @Html.ValidationMessage("nome")
            </div>
            <div class="form-group">
                <label for="email">Email:</label>
                <input type="email" value="@ViewBag.Contato.Email" class="form-control" id="email" placeholder="E-mail" name="email">
                @Html.ValidationMessage("email")
            </div>
            <div class="form-group">
                <label for="assunto">Assunto:</label>
                <input type="text" value="@ViewBag.Contato.Assunto" class="form-control" id="assunto" placeholder="Informe o assunto" name="assunto">
                @Html.ValidationMessage("assunto")
            </div>

            <div class="form-group">
                <label for="mensagem">Mensagem:</label>
                <textarea class="form-control" name="mensagem" id="mensagem" placeholder="Descreva sua mensagem">@ViewBag.Contato.Mensagem</textarea>
                @Html.ValidationMessage("mensagem")
            </div>

        }

        <button type="submit" class="btn btn-primary">Enviar</button>
        @ViewBag.Mensagem



    </form>
</div>